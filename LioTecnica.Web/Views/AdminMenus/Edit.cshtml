@model LioTecnica.Web.ViewModels.Admin.MenuFormModel
@{
    ViewData["Title"] = Model.Id is null ? "New Menu" : "Edit Menu";
}
@section Topbar {
    <div class="d-flex align-items-center justify-content-between w-100">
        <div>
            <div class="h5 mb-0">@ViewData["Title"]</div>
            <div class="text-muted small">Menu configuration.</div>
        </div>
        <a class="btn btn-outline-secondary" href="/Admin/Menus">Back</a>
    </div>
}

<div class="container-fluid py-3">
    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" action="@(Model.Id is null ? "/Admin/Menus/New" : $"/Admin/Menus/Edit/{Model.Id}")">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label" for="DisplayName">Display name</label>
                        <input class="form-control" id="DisplayName" name="DisplayName" value="@Model.DisplayName" />
                        <span class="text-danger small">@Html.ValidationMessage("DisplayName")</span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="Route">Route</label>
                        <input class="form-control" id="Route" name="Route" value="@Model.Route" />
                        <span class="text-danger small">@Html.ValidationMessage("Route")</span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="PermissionKey">Permission key</label>
                        <input class="form-control" id="PermissionKey" name="PermissionKey" value="@Model.PermissionKey" />
                        <span class="text-danger small">@Html.ValidationMessage("PermissionKey")</span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="Order">Order</label>
                        <input class="form-control" id="Order" name="Order" type="number" value="@Model.Order" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="IsActive">Status</label>
                        <select class="form-select" id="IsActive" name="IsActive">
                            <option value="true" selected="@(Model.IsActive ? "selected" : null)">Active</option>
                            <option value="false" selected="@(!Model.IsActive ? "selected" : null)">Inactive</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="Icon">Icon</label>
                        <input class="form-control" id="Icon" name="Icon" value="@Model.Icon" />
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-outline-secondary ms-2" href="/Admin/Menus">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Footer {
    @await Html.PartialAsync("_Footer", new[] { new { Text = "Menus", Class = "muted" } })
}
