    <div class="offcanvas-header border-bottom">
      <div>
        <div class="fw-bold">Filtros e Visões</div>
        <div class="text-muted small">Ajuste o dashboard para a operação do RH</div>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
      <div class="card-soft p-3 mb-3">
        <div class="fw-semibold mb-2"><i class="bi bi-briefcase me-2"></i>Vaga</div>
        <select class="form-select" id="fVaga">
