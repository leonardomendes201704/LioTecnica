            <input type="date" class="form-control" id="fAte">
          </div>
        </div>
      </div>

      <div class="card-soft p-3 mb-3">
        <div class="fw-semibold mb-2"><i class="bi bi-stars me-2"></i>Match mínimo</div>
        <input type="range" class="form-range" min="0" max="100" value="70" id="fMatchMin">
