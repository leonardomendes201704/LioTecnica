@model ErrorViewModel
@{
    Layout = null;
    ViewData["Title"] = "Erro";
}

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Erro - Portal RH</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .error-wrap {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        .error-card {
            width: 100%;
            max-width: 760px;
            background: var(--lt-card, #fff);
            border: 1px solid var(--lt-border);
            border-radius: var(--radius-xl, 18px);
            box-shadow: var(--lt-shadow, 0 10px 30px rgba(11,58,100,.10));
            padding: 2rem;
        }
        .error-art {
            height: 180px;
            border: 2px dashed rgba(16,82,144,.25);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--lt-muted);
            background: rgba(16,82,144,.03);
        }
        .error-actions {
            display: flex;
            gap: .75rem;
            flex-wrap: wrap;
        }
    </style>
</head>
<body>
    <main class="error-wrap">
        <div class="error-card">
            <div class="text-muted small mb-2">Portal RH</div>
            <h1 class="h4 fw-bold mb-2">Ops, algo saiu do esperado</h1>
            <p class="text-muted mb-3">
                Nao foi possivel concluir sua solicitacao agora. Verifique a conexao com a API
                e tente novamente em alguns instantes.
            </p>

            <div class="error-art mb-3" role="img" aria-label="Placeholder para imagem ou SVG">
                <div class="text-center">
                    <div class="fw-semibold">Placeholder para imagem/SVG</div>
                    <div class="small">Substituir por ilustracao de erro</div>
                </div>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="small text-muted mb-3">
                    Request ID: <code>@Model.RequestId</code>
                </div>
            }

            <div class="error-actions">
                <a class="btn btn-brand" href="/">Ir para inicio</a>
                <button class="btn btn-ghost" type="button" onclick="location.reload()">Tentar novamente</button>
            </div>
        </div>
    </main>
</body>
</html>
