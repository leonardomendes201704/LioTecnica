@model LioTecnica.Web.ViewModels.Admin.RoleFormModel
@{
    ViewData["Title"] = Model.Id is null ? "New Role" : "Edit Role";
}
@section Topbar {
    <div class="d-flex align-items-center justify-content-between w-100">
        <div>
            <div class="h5 mb-0">@ViewData["Title"]</div>
            <div class="text-muted small">Role details.</div>
        </div>
        <a class="btn btn-outline-secondary" href="/Admin/Roles">Back</a>
    </div>
}

<div class="container-fluid py-3">
    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" action="@(Model.Id is null ? "/Admin/Roles/New" : $"/Admin/Roles/Edit/{Model.Id}")">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label" for="Name">Name</label>
                        <input class="form-control" id="Name" name="Name" value="@Model.Name" />
                        <span class="text-danger small">@Html.ValidationMessage("Name")</span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="IsActive">Status</label>
                        <select class="form-select" id="IsActive" name="IsActive">
                            <option value="true" selected="@(Model.IsActive ? "selected" : null)">Active</option>
                            <option value="false" selected="@(!Model.IsActive ? "selected" : null)">Inactive</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label" for="Description">Description</label>
                        <textarea class="form-control" id="Description" name="Description" rows="3">@Model.Description</textarea>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-outline-secondary ms-2" href="/Admin/Roles">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Footer {
    @await Html.PartialAsync("_Footer", new[] { new { Text = "Roles", Class = "muted" } })
}
