@model LioTecnica.Web.ViewModels.Admin.AccessesPageViewModel
@{
    ViewData["Title"] = "Portal RH - Accesses";
    ViewData["SidebarSubtitle"] = "Accesses";
    var selectedPermissions = new HashSet<string>(
        Model.RoleMenus.Select(x => x.PermissionKey),
        StringComparer.OrdinalIgnoreCase);
}

@section Topbar {
    @await Html.PartialAsync("_TopbarBrand", "Tela: Accesses")

    <div class="searchbox position-relative d-none d-md-block">
        <i class="bi bi-search"></i>
        <input id="globalSearchAccesses" class="form-control" placeholder="Buscar permissao..." />
    </div>

    <div class="d-flex align-items-center gap-2">
        <button class="btn btn-ghost" type="button" id="btnAccessSelectAll">
            <i class="bi bi-check2-square"></i><span class="d-none d-sm-inline ms-1">Selecionar tudo</span>
        </button>
        <button class="btn btn-ghost" type="button" id="btnAccessClear">
            <i class="bi bi-x-circle"></i><span class="d-none d-sm-inline ms-1">Limpar</span>
        </button>
        @await Html.PartialAsync("_TopbarUserMenu", "Admin")
    </div>
}

<section class="content">
    <div class="page-title">
        <div>
            <h4>Accesses</h4>
            <div class="subtitle">Atribua menus e permissoes para um perfil.</div>
        </div>
        <div class="d-flex align-items-center gap-2">
            <span class="badge-soft"><i class="bi bi-clock me-1"></i><span id="nowLabel">-</span></span>
            <span class="badge-soft"><i class="bi bi-hdd me-1"></i>API</span>
        </div>
    </div>

    @{
        var kpis = new[]
        {
            new { ColClass = "col-6 col-lg-3", Title = "Menus", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiAccessMenus", Value = "0", PillIcon = "bi-list", PillText = "total", Hint = "Menus disponiveis." },
            new { ColClass = "col-6 col-lg-3", Title = "Selecionados", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiAccessSelected", Value = "0", PillIcon = "bi-check2-circle", PillText = "ativos", Hint = "Permissoes do perfil." },
            new { ColClass = "col-6 col-lg-3", Title = "Perfis", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiAccessRoles", Value = "0", PillIcon = "bi-shield-lock", PillText = "roles", Hint = "Perfis cadastrados." },
            new { ColClass = "col-6 col-lg-3", Title = "Custom", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiAccessCustom", Value = "0", PillIcon = "bi-lightning-charge", PillText = "extra", Hint = "Permissoes extras." }
        };
    }
    @await Html.PartialAsync("_KpiMiniRow", kpis)

    <div class="card-soft p-3 mb-3">
        <form method="get" action="/Admin/Accesses" class="d-flex flex-wrap align-items-end justify-content-between gap-2">
            <div class="d-flex flex-wrap gap-2 align-items-end">
                <div>
                    <label class="form-label small mb-1">Perfil</label>
                    <select class="form-select" name="roleId" id="accessRoleSelect">
                        <option value="">Selecione um perfil</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Id" selected="@(Model.SelectedRoleId == role.Id ? "selected" : null)">@role.Name</option>
                        }
                    </select>
                </div>
                <div>
                    <button type="submit" class="btn btn-ghost">
                        <i class="bi bi-arrow-repeat"></i><span class="d-none d-sm-inline ms-1">Carregar</span>
                    </button>
                </div>
            </div>

            <div class="d-flex flex-wrap gap-2 justify-content-end">
                <div style="min-width:240px;">
                    <label class="form-label small mb-1">Buscar</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background:rgba(255,255,255,.65)"><i class="bi bi-search"></i></span>
                        <input class="form-control" id="accessSearch" placeholder="menu, perm, rota...">
                    </div>
                </div>
                <div>
                    <label class="form-label small mb-1">Status</label>
                    <select class="form-select" id="accessStatus">
                        <option value="all">Todos</option>
                        <option value="selected">Selecionados</option>
                        <option value="unselected">Nao selecionados</option>
                    </select>
                </div>
            </div>
        </form>
    </div>

    @if (Model.SelectedRoleId.HasValue)
    {
        <div class="card-soft p-3 mb-3">
            <form method="post" action="/Admin/Accesses" id="accessForm">
                <input type="hidden" name="RoleId" value="@Model.SelectedRoleId" />

                <div class="d-flex align-items-center justify-content-between gap-2 mb-2">
                    <div class="fw-semibold">Permissoes do perfil</div>
                    <div class="d-flex align-items-center gap-2">
                        <button type="button" class="btn btn-ghost" id="btnAccessSelectAllInline">
                            <i class="bi bi-check2-square"></i><span class="d-none d-sm-inline ms-1">Selecionar tudo</span>
                        </button>
                        <button type="button" class="btn btn-ghost" id="btnAccessClearInline">
                            <i class="bi bi-x-circle"></i><span class="d-none d-sm-inline ms-1">Limpar</span>
                        </button>
                        <button type="submit" class="btn btn-brand">
                            <i class="bi bi-check2-circle"></i><span class="d-none d-sm-inline ms-1">Salvar acessos</span>
                        </button>
                    </div>
                </div>

                <hr class="my-3 divider">

                <div class="row g-2" id="accessList">
                    @foreach (var menu in Model.Menus)
                    {
                        var isChecked = selectedPermissions.Contains(menu.PermissionKey);
                        <div class="col-12 col-md-4 access-item" data-text="@($"{menu.DisplayName} {menu.PermissionKey} {menu.Route}")" data-selected="@(isChecked ? "true" : "false")">
                            <div class="card-soft p-2 h-100 access-card" role="button" tabindex="0">
                                <div class="d-flex align-items-stretch gap-2 h-100">
                                    <div class="access-icon">
                                        <i class="bi @menu.Icon"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-semibold">@menu.DisplayName</div>
                                        <div class="text-muted small mono">@menu.PermissionKey</div>
                                        <div class="text-muted small">@menu.Route</div>
                                    </div>
                                    <div class="access-check-wrap">
                                        <input class="form-check-input access-check" type="checkbox" name="SelectedPermissions" value="@menu.PermissionKey" @(isChecked ? "checked" : "") />
                                        <i class="bi bi-check-circle-fill access-check-icon" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        if (string.Equals(menu.PermissionKey, "users.read", StringComparison.OrdinalIgnoreCase))
                        {
                            var canWrite = selectedPermissions.Contains("users.write");
                            <div class="col-12 col-md-4 access-item" data-text="Users write users.write" data-selected="@(canWrite ? "true" : "false")">
                                <div class="card-soft p-2 h-100 access-card" role="button" tabindex="0">
                                    <div class="d-flex align-items-stretch gap-2 h-100">
                                        <div class="access-icon">
                                            <i class="bi bi-person-gear"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="fw-semibold">Users write</div>
                                            <div class="text-muted small mono">users.write</div>
                                            <div class="text-muted small">Permissao de escrita</div>
                                        </div>
                                        <div class="access-check-wrap">
                                            <input class="form-check-input access-check" type="checkbox" name="SelectedPermissions" value="users.write" @(canWrite ? "checked" : "") />
                                            <i class="bi bi-check-circle-fill access-check-icon" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </form>
        </div>
    }

    <div style="height:14px;"></div>
</section>

@section Footer {
    @{
        var footerItems = new[]
        {
            new { Icon = "bi-shield-check", Text = "Accesses", Id = "", Class = "" },
            new { Icon = "", Text = "build: api", Id = "buildId", Class = "mono muted" }
        };
    }
    @await Html.PartialAsync("_Footer", footerItems)
}

@section Scripts {
    <script src="~/js/views/admin-accesses.js" asp-append-version="true"></script>
}
